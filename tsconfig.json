{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["ES2018"],
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
        "@/*": ["*"]
        }
    }
}